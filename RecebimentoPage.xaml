<Window x:Class="SeuNamespace.RecebimentoPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SeuNamespace"
        Title="Recebimento" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Operacoes}"
                  AutoGenerateColumns="False"
                  CanUserResizeColumns="True"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  MinColumnWidth="100"
                  HeadersVisibility="Column"
                  ScrollViewer.HorizontalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="" Width="50" Binding="{Binding IsSelected}" />
                <DataGridTextColumn Header="Data da Passagem" Width="200" Binding="{Binding DataPassagem}" />
                <DataGridTextColumn Header="Chegada" Width="200" Binding="{Binding Chegada}" />
                <DataGridTextColumn Header="Entrada" Width="200" Binding="{Binding Entrada}" />
                <DataGridTextColumn Header="Saída" Width="200" Binding="{Binding Saida}" />
                <DataGridTemplateColumn Header="Situação" Width="200" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>